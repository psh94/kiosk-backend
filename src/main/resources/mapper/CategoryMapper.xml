<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shbak.kiosk.repository.CategoryMapper">
    <select id="findCategories" resultType="com.shbak.kiosk.entity.Category">
        SELECT id, name FROM category
    </select>

    <insert id="addCategory" parameterType="com.shbak.kiosk.entity.Category" useGeneratedKeys="true" keyProperty="id">
        insert into category(name) values (#{name})
    </insert>

    <select id="checkDuplicateCategoryByName" resultType="boolean">
        select case when count(*) > 0
            then true else false end as result
        from category
        where name = #{name}
    </select>

    <delete id="deleteCategoryById" parameterType="long">
        delete from category where id = #{id};
    </delete>

</mapper>
