<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shbak.kiosk.repository.MenuMapper">
    <select id="findMenu" resultType="com.shbak.kiosk.entity.Menu">
        SELECT * FROM menu
    </select>

    <select id="findMenuById" resultType="com.shbak.kiosk.entity.Menu">
        SELECT * FROM menu where id = #{id}
    </select>

    <insert id="addMenu" parameterType="com.shbak.kiosk.entity.Menu" useGeneratedKeys="true" keyProperty="id">
        insert into menu(name, price, description, category_id) values (#{name}, #{price}, #{description},#{categoryId})
    </insert>

    <delete id="deleteMenuById" parameterType="long">
        delete from menu where id = #{id};
    </delete>

</mapper>
